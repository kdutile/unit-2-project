<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Today's Special</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <div class="container">
      <h1>Days</h1>
      <section>
        <div class="row">
          <%- include('../partials/daysbuttons.ejs') %>
        </div>
      </section>
      <section>
        <div class="row">
          <%- include('../partials/mealsbuttons.ejs') %>
        </div>
      </section>
      <section>
        <table class="striped responsive-table">
          <thead>
            <tr>
                <th>Date</th>
                <th>Lunch</th>
                <th>Dinner</th>
                <th>Heat & Eat</th>
            </tr>
          </thead>
          <tbody>
            <% for (let day of allDays) { %>
              <tr>
                <td>
                  <a href="/days/<%=day.id%>"><%=day.date%></a>
                </td>
                <td><a href="/meals/<%=day.lunch.id%>"><%=day.lunch.name%></a></td>
                <td><a href="/meals/<%=day.dinner.id%>"><%=day.dinner.name%></a></td>
                <td>|
                  <% for (let meal of day.prepared) { %>
                    <a href="/meals/<%=meal.id%>"><%=meal.name%></a> |
                  <% } %>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </section>
    </div>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
  </body>
</html>
