<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Today's Special</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <div class="container">
      <h1>Meals</h1>
      <section>
        <div class="row">
          <div class="col">
            <a class="waves-effect waves-light btn" href="/meals/new">New meal</a>
          </div>
        </div>
      </section>
      <section>
        <div class="row">
          <% for (const [i, meal] of allMeals.entries()) { %>
          <div class="col s12 m4">
            <div class="card">
              <div class="card-image">
                <img src="<%=meal.img%>">
                <span class="card-title"><%=meal.name%></span>
              </div>
              <div class="card-content">
                <p><%=meal.description%></p>
                <p><%=meal.allergies%></p>
              </div>
              <div class="card-action">
                <div class="row">
                  <div class="col">
                    <a class="waves-effect waves-light btn" href="/meals/<%=meal.id%>/edit"><i class="material-icons left">edit</i>Edit</a>
                  </div>
                  <div class="col">
                    <form action="/meals/<%=meal.id%>?_method=DELETE" method="POST">
                      <button class="btn waves-effect waves-light" type="submit" name="action">
                        <i class="material-icons left">delete</i>Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </section>
    </div>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
  </body>
</html>
