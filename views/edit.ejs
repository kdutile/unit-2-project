<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Today's Special</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <div class="container">
      <h1>Edit Meal</h1>
      <section>
        <div class="row">
          <div class="col">
            <a class="waves-effect waves-light btn" href="/meals">Home</a>
          </div>
          <div class="col">
            <a class="waves-effect waves-light btn" href="/meals/new">New meal</a>
          </div>
        </div>
      </section>

      <div class="row">
        <form class="col s12" action="/meals/<%=meal.id%>?_method=PUT" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <input id="meal_name" placeholder="" type="text" class="validate" name="name" value="<%=meal.name%>">
              <label for="meal_name">Name</label>
            </div>
            <div class="input-field col s6">
              <input id="img_url" placeholder="" type="text" class="validate" name="img" value="<%=meal.img%>">
              <label for="img_rul">Image URL</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="meal_description" placeholder="" type="text" class="validate" name="description" value="<%=meal.description%>">
              <label for="meal_description">Description</label>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label>Dietary restrictions and allergies</label>
              <select class="browser-default" name="allergies">
                <option value="" disabled selected>Choose your option</option>
                <% const allergies = ['','Vegan','Vegetarian','Dairy','Nuts','Gluten','Shellfish'];
                for (let each of allergies) { %>
                  <option value="<%=each%>"
                    <% if (each === meal.allergies[0]) { %>
                      selected
                    <% } %>
                    ><%=each%></option>
                  <% } %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
          </form>
        </div>
    </div>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
  </body>
</html>
